<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28282B"
    android:orientation="vertical">

    <include
        layout="@layout/events_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#28282B"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop" />

            <com.bluejamesbond.text.DocumentView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                ext:documentView_insetPadding="16dp"
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="#ffffff"
                ext:documentView_textSize="16sp"
                ext:documentView_textTypefacePath="fonts/avenir.otf" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="73dp"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_white_selector"
                android:text="Click to Register"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt16"
                android:visibility="gone"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>